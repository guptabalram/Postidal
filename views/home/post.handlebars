

      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{post.user.firstName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{generateTime date 'MMMM Do YYYY'}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

          <hr>

          <!-- Post Content -->
          <p class="lead">

            {{post.body}}

          </p>
          



          <!-- Comments Form -->

          {{#if user}}


          <!--<form style="display:inline" action="/admin/posts/like/{{post._id}}" method="post"> -->
              <button style="font-size:22px" id="like" type="submit" data-id="{{post._id}}" class="btn btn-light mr-1">
                <i class="text-info fa fa-thumbs-o-up"></i>
                <span class="badge badge-light">{{post.likes.length}}</span>
              </button>                 
         <!-- </form> -->
          <!--<form style="display:inline" action="/admin/posts/unlike/{{post._id}}" method="post">-->
              <button style="font-size:22px" id="unlike" type="submit" data-id="{{post._id}}" class="btn btn-light mr-1">
                <i class="fa fa-thumbs-o-down"></i>               
              </button>                 
          <!--</form>-->


     {{#if post.allowComments}}

        <!-- Comments Form -->
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
                <form action="/admin/comments" method="post">
                    <div class="form-group">
                        <textarea name="body" class="form-control" rows="3"></textarea>

                        <input type="hidden" value="{{post.slug}}" name="id">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>

        {{else}}

        <h2>Comments not allowed for this</h2>

            <br>
            <hr>


        {{/if}}


    {{else}}

        You need to login to comment <a href="/login">Login</a>

        <br>
        <hr>

    {{/if}}



         {{#each post.comments}}

        <!-- Single Comment -->
        <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
                <h5 class="mt-0">{{user.firstName}}</h5>

                {{body}}

            </div>
        </div>

        {{/each}}

          <!-- Comment with nested comments -->
          

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
              </div>
            </div>
          </div>

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
              <div class="row">
               

               {{#each categories}}
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">{{name}}</a>
                    </li>
                   
                  </ul>
                </div>
                {{/each}}


              </div>
            </div>
          </div>

          <!-- Side Widget -->
          

        </div>

      </div>
      <!-- /.row -->

  