<style>
    .ps-form__content input{
        height:4rem !important;
    }
    .ps-tab,.ps-tabs{
        padding-bottom:2rem;
    }
</style>
<div class="ps-page--my-account">
        <div class="ps-breadcrumb">
            <div class="container">
                <ul class="breadcrumb">
                    <li><a href="{{config.root}}">Home</a></li>
                    <li>Forgot Password</li>
                </ul>
            </div>
        </div>
        <div class="ps-my-account">
            <div class="container">
                <div class="ps-form--account ps-tab-root" action="" method="get">
                    <div class="ps-tabs">
                        <div class="ps-tab active" id="sign-in">
                            <div class="ps-form__content">
                                <form method="post" action="{{config.base_url}}/reset-password" id="resetForm">
                                <input type="hidden" name="user_id" value="{{userFound._id}}">
                                <div class="form-group">
                                    <input class="form-control" type="password" placeholder="Enter New Password" name="password" required onkeyup="checkPasswordOnType()">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="password" placeholder="Confirm New Password" name="cpassword" required onkeyup="checkPasswordOnType()">
                                </div>
                                <p class="text-danger" id="error" style="display:none;">* Both password should match!</p>
                                <div class="form-group submtit">
                                    <button class="ps-btn ps-btn--fullwidth" onclick="checkPassword()" type="button">Change Password</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function checkPassword(){
            const password=$("input[name=password]").val();
            const cpassword=$("input[name=cpassword]").val();
            if(password!=cpassword){
                $("#error").show();
            }else{
                $("#error").hide();
                $("#resetForm").submit();
            }
        }
        function checkPasswordOnType(){
            const password=$("input[name=password]").val();
            const cpassword=$("input[name=cpassword]").val();
            if(password!=cpassword){
                $("#error").show();
            }else{
                $("#error").hide();
            }
        }
    </script>