<h1>My Posts</h1>

{{#if success_message}}
  <div class="alert alert-success alert-dismissible fade show">
    <button class="close" data-dismiss="alert" type="button">
        <span>&times;</span>
    </button>
    <strong>{{success_message}}</strong>
  </div>
{{/if}}



<table class="table table-striped">
    <thead class="thead-inverse">
    <tr>

        <th>Id</th>
        <th>File</th>
        <th>Title</th>
        <th>Status</th>
        <th>Category</th>
        <th>Allow Comments</th>
        <th>View Post</th>
        <th>Date</th>

    </tr>
    </thead>

    <tbody>

    {{#each posts}}

        <tr>

            <td>{{id}}</td>
            <td><img height="50" class="img-responsive" src="/uploads/{{file}}" alt=""></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{Category.name}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>{{generateTime date 'MMMM Do YYYY'}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>

                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">

                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form>



            </td>

        </tr>


    {{/each}}
    </tbody>



</table>